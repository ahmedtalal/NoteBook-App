<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background2"
    android:id="@+id/bottomSheet_id"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add tags"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="#272727"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DAD8D8"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Travel"
            android:textSize="16sp"
            android:padding="10dp"
            android:id="@+id/traveled_id"
            android:shadowColor="#4949E7"
            android:drawableRight="@drawable/ic_tagg"
            android:drawablePadding="7dp"
            android:gravity="right"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD8D8"
            android:padding="10dp"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Personal"
            android:textSize="16sp"
            android:padding="10dp"
            android:id="@+id/personaled_id"
            android:drawableRight="@drawable/ic_tag11"
            android:drawablePadding="7dp"
            android:gravity="right"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD8D8"
            android:padding="10dp"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Life"
            android:textSize="16sp"
            android:padding="10dp"
            android:id="@+id/lifed_id"
            android:drawableRight="@drawable/ic_tag22"
            android:drawablePadding="7dp"
            android:gravity="right"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD8D8"
            android:padding="10dp"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Work"
            android:textSize="16sp"
            android:padding="10dp"
            android:id="@+id/worked_id"
            android:drawableRight="@drawable/ic_tag33"
            android:drawablePadding="7dp"
            android:gravity="right"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD8D8"
            android:padding="10dp"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Untagged"
            android:textSize="16sp"
            android:padding="10dp"
            android:id="@+id/untagged_id"
            android:drawableRight="@drawable/ic_tag33"
            android:drawablePadding="7dp"
            android:gravity="right"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD8D8"
            android:padding="10dp"
            />
    </RadioGroup>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:background="#F1F1F1"
        android:layout_margin="13dp"
        app:cardElevation="3dp"
        >
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/rippleStyle"
            android:id="@+id/canceled_id"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cancel"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="#4949E7"
                android:background="#F1F1F1"
                />

        </com.balysv.materialripple.MaterialRippleLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>